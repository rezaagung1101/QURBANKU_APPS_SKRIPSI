<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.panitia.DetailProfileJemaahActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="-16dp"
        android:elevation="3dp"
        android:src="@drawable/profile_jemaah"
        app:layout_constraintBottom_toTopOf="@+id/card_profile_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_name_title"
                style="@style/TextSpec.Value"
                android:layout_height="20dp"
                android:text="@string/name"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name_value"
                style="@style/TextSpec.Value"
                android:text="@string/name"
                android:textColor="@color/text_color_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_email_title"
                style="@style/TextSpec.Value"
                android:layout_height="20dp"
                android:text="@string/email"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_email_value"
                style="@style/TextSpec.Value"
                android:text="@string/email"
                android:textColor="@color/text_color_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_head_title"
                style="@style/TextSpec.Value"
                android:layout_height="20dp"
                android:text="@string/head_of_family"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_head_value"
                style="@style/TextSpec.Value"
                android:text="@string/name"
                android:textColor="@color/text_color_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_phone_number_title"
                style="@style/TextSpec.Value"
                android:layout_height="20dp"
                android:text="@string/phone_number"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone_number_value"
                style="@style/TextSpec.Value"
                android:text="@string/phone_number"
                android:textColor="@color/text_color_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_address_title"
                style="@style/TextSpec.Value"
                android:layout_height="20dp"
                android:text="@string/address"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_address_value"
                style="@style/TextSpec.Value"
                android:text="@string/address"
                android:textColor="@color/text_color_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_qurbani_amount_title"
                style="@style/TextSpec.Value"
                android:layout_height="20dp"
                android:text="@string/history_qurbani_amount"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_qurbani_amount_value"
                style="@style/TextSpec.Value"
                android:text="@string/history_qurbani_amount"
                android:textColor="@color/text_color_light"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>