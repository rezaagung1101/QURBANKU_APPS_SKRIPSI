    <style name="TextSpec.LabelBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextSpec.LabelMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextSpec.LabelSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="FloatingButtonStyle" parent="">
        <item name="backgroundTint">@color/green_main</item>
    </style>
</resources>