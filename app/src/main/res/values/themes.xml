<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.QURBANKU_APPS_SKRIPSI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green_main</item>
        <item name="colorPrimaryVariant">@color/green_light_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_dark_label</item>
        <item name="colorSecondaryVariant">@color/green_dark_label</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_dark_label</item>
    </style>

    <style name="Theme.QURBANKU_APPS_SKRIPSI" parent="Base.Theme.QURBANKU_APPS_SKRIPSI" />

    <style name="Theme.MaterialComponents.DayNight.Title" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/green_light_1</item>
        <item name="colorOnPrimary">@color/green_dark_label</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_dark_label</item>
        <item name="colorSecondaryVariant">@color/green_dark_label</item>
        <item name="colorOnSecondary">@color/green_dark_label</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_dark_label</item>
        <item name="android:fontFamily">@font/regular_poppins</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@color/green_navbar</item>
        <item name="itemIconSize">35dp</item>
        <item name="itemIconTint">@drawable/bottom_nav_selector</item>
    </style>
    <style name="TextSpec.BottomNavActive">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextSpec.BottomNavInactive">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/green_dark_label</item>
    </style>

    <style name="Theme.QURBANKU_APPS_SKRIPSI.NoActionBarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TextSpec">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextSpec.Field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Field.SmallLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="TextSpec.Field.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/green_main</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="TextSpec.Field.Button.SmallTransparent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/green_dark_label</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="TextSpec.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Value.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="TextSpec.Value.SmallDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Value.SmallBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/popping_bold</item>
    </style>

    <style name="TextSpec.Heading1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Heading2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Heading3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="TextSpec.LabelBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.LabelMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.LabelSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="FloatingButtonStyle" parent="">
        <item name="backgroundTint">@color/green_main</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="LabelBackground">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="android:minWidth">180dp</item>-->
        <!--        <item name="android:minHeight">10dp</item>-->
        <item name="android:background">@color/green_dark_label</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="TextSpec.LabelWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>