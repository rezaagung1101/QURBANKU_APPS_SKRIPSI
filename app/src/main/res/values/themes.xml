<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.QURBANKU_APPS_SKRIPSI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.QURBANKU_APPS_SKRIPSI" parent="Base.Theme.QURBANKU_APPS_SKRIPSI" />

    <style name="Theme.QURBANKU_APPS_SKRIPSI.NoActionBarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TextSpec">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextSpec.Field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="TextSpec.Field.SmallLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>
    <style name="TextSpec.Field.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/green_main</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="TextSpec.Field.Button.SmallTransparent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/green_dark_label</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
    <style name="TextSpec.Value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="TextSpec.Value.SmallDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSpec.Heading1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/popping_bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Heading2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Heading3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

